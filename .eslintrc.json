{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true,
		"jest": true
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"extends": [
		"plugin:react/recommended",
		"opentable"
	],
	"plugins": [
		"react"
	],
	"settings": {
		"react": {
			"version": "17.0.2"
		}
	},
	"rules": {
		"react/jsx-filename-extension": [
			"warn",
			{
				"extensions": [
					".js",
					".jsx"
				]
			}
		],
		"react/react-in-jsx-scope": "off",
		"import/no-unresolved": "off",
		"no-plusplus": "off",
		"no-return-assign": 0,
		"no-param-reassign": 0,
		"no-shadow": "off"
	},
	"ignorePatterns": [
		"dist/",
		"build/"
	]
}